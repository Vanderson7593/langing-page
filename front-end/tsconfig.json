{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@theme": ["client/design/theme/index.ts"],
      "@elements": ["client/design/elements/index.ts"],
      "@components": ["client/components/index.ts"],
      "@atom": ["client/components/atom/index.ts"],
      "@svgs": ["client/components/svgs/index.ts"],
      "@types": ["types/index.ts"],
      "@constants": ["constants/index.ts"],
      "@mocks": ["mocks/index.ts"],
      "@views/*": ["client/views/*"],
      "@styles": ["client/design/styles/index.ts"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
